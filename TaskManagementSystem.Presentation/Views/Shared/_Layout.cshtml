<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Management System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-semibold d-flex align-items-center gap-2" asp-controller="Tasks" asp-action="Index">
                    <i class="bi bi-check2-square text-primary"></i>
                    Task Management System
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNav" class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tasks" ? "active" : "")"
                               asp-controller="Tasks" asp-action="Index">
                                <i class="bi bi-list-task"></i> Tasks
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-2">
                        <a class="btn btn-primary btn-sm" asp-controller="Tasks" asp-action="Create">
                            <i class="bi bi-plus-lg"></i> New Task
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1 py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="mt-auto border-top bg-body-tertiary">
        <div class="container small text-muted d-flex align-items-center justify-content-between py-3">
            <span>&copy; @DateTime.UtcNow.Year - TaskManagementSystem</span>
            <a class="text-decoration-none" asp-controller="Tasks" asp-action="Index">
                <i class="bi bi-house-door"></i> Home
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
